{
  "id": "source-mysql",
  "name": "MySQL Source",
  "kind": "source",
  "icon": "mysql",
  "description": "Read data from MySQL databases",
  "spec": {
    "type": "object",
    "required": ["host", "port", "database", "username", "password"],
    "properties": {
      "host": {
        "type": "string",
        "title": "Host",
        "description": "Database server hostname or IP address",
        "x-order": 1
      },
      "port": {
        "type": "integer",
        "title": "Port",
        "default": 3306,
        "minimum": 1,
        "maximum": 65535,
        "x-order": 2
      },
      "database": {
        "type": "string",
        "title": "Database",
        "description": "Database name to connect to",
        "x-order": 3
      },
      "username": {
        "type": "string",
        "title": "Username",
        "x-order": 4
      },
      "password": {
        "type": "string",
        "title": "Password",
        "x-secret": true,
        "x-order": 5
      },
      "ssl_mode": {
        "type": "string",
        "title": "SSL Mode",
        "enum": ["disabled", "preferred", "required", "verify_ca", "verify_identity"],
        "default": "preferred",
        "x-order": 6
      }
    }
  }
}
